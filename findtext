#!/bin/bash 

#syntax: findtext [--program=PROGRAM] PATTERN DIRECTORY

#### Fuctions

function printDir {
    shopt -s dotglob
    for file in "$1"/*
    do
        echo $(basename $file)
    done
}


#### MAIN

echo "Positional Parameters"
PROGRAM=$1
PATTERN=$2


DIRECTORY=$3

echo $PROGRAM
echo $PATTERN
echo $DIRECTORY

printDir $DIRECTORY


# Successful competion:
exit 0

# EOF